<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="800dp"
        android:orientation="vertical"
        android:padding="30dp">
    <EditText
        android:id="@+id/budget"
        android:layout_width="250dp"
        android:layout_marginTop="80dp"
        android:hint="Budget"
        android:text="0.00"
        android:inputType="numberDecimal"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_width="250dp"
        android:layout_below="@+id/budget"
        android:layout_marginTop="15dp"
        android:text="Submit budget"
        android:id="@+id/submit_value"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp"/>
        <EditText
        android:layout_width="250dp"
        android:id="@+id/category_income"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Category"
        />


        <EditText
            android:id="@+id/income"
            android:layout_width="250dp"
            android:layout_marginTop="10dp"
            android:hint="income"

            android:inputType="numberDecimal"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_width="200dp"
            android:layout_below="@+id/income"
            android:layout_marginTop="15dp"
            android:text="Submit income"
            android:id="@+id/submit_income"
            android:layout_centerHorizontal="true"
            android:layout_height="50dp"/>

        <EditText
            android:layout_width="250dp"
            android:id="@+id/category"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:hint="Category"
            />


        <EditText
            android:id="@+id/expense"
            android:layout_width="250dp"
            android:layout_marginTop="10dp"
            android:hint="expense"

            android:inputType="numberDecimal"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"/>
        <Button
            android:layout_width="200dp"
            android:layout_below="@+id/expense"
            android:layout_marginTop="15dp"
            android:text="Submit expense"
            android:id="@+id/submit_expense"
            android:layout_centerHorizontal="true"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"/>

    </LinearLayout>

</RelativeLayout>